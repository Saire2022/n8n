# n8n Environment Configuration
# Copy this file to .env and update the values

# Basic Authentication
N8N_USER=admin@example.com
N8N_PASSWORD=your-secure-password
N8N_API_KEY=your_api_key_here 

# Server Configuration
N8N_HOST=localhost
N8N_PROTOCOL=http
N8N_EDITOR_BASE_URL=http://localhost:5678

# Security
N8N_ENCRYPTION_KEY=your-32-character-encryption-key-here

# Webhook Configuration
WEBHOOK_URL=http://localhost:5678/

# Ngrok Configuration (for local testing)
NGROK_ENABLED=false
NGROK_AUTH_TOKEN=your_ngrok_auth_token_here
NGROK_DOMAIN=your_ngrok_domain.ngrok.io
NGROK_REGION=us

# Production Domain Configuration
DOMAIN_NAME=your-domain.com
SUBDOMAIN=n8n
SSL_EMAIL=admin@your-domain.com

# Email Configuration (for production)
N8N_EMAIL_MODE=smtp
N8N_SMTP_HOST=smtp.gmail.com
N8N_SMTP_PORT=587
N8N_SMTP_USER=your-email@gmail.com
N8N_SMTP_PASS=your-app-password
N8N_SMTP_SENDER=your-email@gmail.com

# Performance
N8N_PAYLOAD_SIZE_MAX=16
N8N_LOG_LEVEL=info
GENERIC_TIMEZONE=UTC

# Database (optional - for external database)
# N8N_DATABASE_TYPE=postgresdb
# N8N_DATABASE_POSTGRESDB_HOST=localhost
# N8N_DATABASE_POSTGRESDB_PORT=5432
# N8N_DATABASE_POSTGRESDB_DATABASE=n8n
# N8N_DATABASE_POSTGRESDB_USER=n8n
# N8N_DATABASE_POSTGRESDB_PASSWORD=your-db-password